{
  "name": "shada-it",
  "version": "0.1.0",
  "description": "Complete Syntax Highlighting for Markdown It with Shiki",
  "author": "Maful Prayoga <me@maful.web.id>",
  "license": "MIT",
  "homepage": "https://github.com/maful/shada-it",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maful/shada-it.git"
  },
  "bugs": {
    "url": "https://github.com/maful/shada-it/issues"
  },
  "keywords": [
    "markdown-it",
    "markdown-it-plugin",
    "shiki"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "npm run build -- --watch",
    "build": "tsup src/index.ts src/worker.ts --format cjs,esm --dts --external ./worker"
  },
  "dependencies": {
    "shiki": "^0.14.2",
    "synckit": "^0.8.5"
  },
  "devDependencies": {
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^18.16.3",
    "markdown-it": "^13.0.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  }
}
